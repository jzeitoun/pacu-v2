<div class="content">
  {{#if attrs.dot}}
    <span class="ui right floated blue circular mini label">{{attrs.dot}}</span>
  {{/if}}
  <div class="header" style="word-wrap: break-word">{{attrs.title}}</div>
  <div class="meta">
    <span class="user">{{attrs.user}}</span>
    <span class="right floated time-ago">{{attrs.timeAgo}}</span>
  </div>
  <div class="description">
    <p>{{attrs.desc}}</p>
  </div>
</div>
<div class="extra content">
  <a class="left floated">
    <i class="desktop icon"></i> <span class="host">{{attrs.host}}</span>
  </a>
  <a class="right floated">
    <i class="file icon"></i> <span class="resource">{{attrs.src}}</span>
  </a>
</div>
{{yield}}
