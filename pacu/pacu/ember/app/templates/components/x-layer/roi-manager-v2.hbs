<marker id="default" markerUnits="userSpaceOnUse" markerHeight="10" markerWidth="10"
  refX="5" refY="5">
  <circle cx="5" cy="5" r="1.2"/>
</marker>

<marker id="in-progress" markerUnits="userSpaceOnUse" markerHeight="10" markerWidth="10"
  refX="5" refY="5">
  <circle cx="5" cy="5" r="1.2"/>
</marker>

<marker id="computed" markerUnits="userSpaceOnUse" markerHeight="10" markerWidth="10"
  refX="5" refY="5">
  <circle cx="5" cy="5" r="1.2"/>
</marker>

<marker id="selected-dragging" markerUnits="userSpaceOnUse" markerHeight="10" markerWidth="10"
  refX="5" refY="5">
  <circle cx="5" cy="5" r="1.2"/>
</marker>

{{#if placeMode}}
  {{x-layer/roi-manager-v2/prototype points=roiPrototype.points}}
{{/if}}

{{#if selectMode}}
  {{x-layer/roi-manager-v2/select-rect
    x=selectRect.x
    y=selectRect.y
    width=selectRect.width
    height=selectRect.height}}
{{/if}}

{{#each rois as |roi|}}
  {{x-layer/roi-manager-v2/roi
    roi_id=roi.roi_id
    points=roi.polygon
    neuropilPoints=roi.neuropilPolygon
    neuropilEnabled=neuropilEnabled
    neuropilRatio=neuropilRatio
    lastComputedPoints=roi.lastComputedPolygon
    computed=roi.computed
    selected=roi.selected
    dragging=roi.dragging
    pointdrag=roi.pointdrag
    targetPoint=roi.targetPoint
    placeMode=placeMode
    disableHandles=disableHandles
    triggerUpdate=(action "triggerUpdate" roi.roi_id)
    hover=roi.hover}}
{{/each}}
